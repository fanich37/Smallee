*
	box-sizing border-box

.smallee
	padding 40px 0
	display block
	
	&-inner:after
		content ''
		display table
		width 0
		clear both

	&-next,
	&-prev
		position absolute
		z-index 1
		top 30%
		padding 10px
		display inline-block
		width 50px
		height 50px 
		background-color #fff
		border-radius 50%
		box-shadow 0 2px 2px 2px rgba(0, 0, 0, .5)
		transition time-s

	&-prev
		left 30px
		&:before
			content ''
			position absolute
			display block
			top 15px
			left 10px
			width 25px
			height 4px
			background-color black
			transform rotate(-45deg)
		&:after
			content ''
			position absolute
			top 30px
			left 10px
			display block
			width 25px
			height 4px
			background-color black
			transform rotate(45deg)
			
		&_disabled
			opacity .5

	&-next
		right 30px
		&:before
			content ''
			position absolute
			display block
			top 15px
			right 10px
			width 25px
			height 4px
			background-color black
			transform rotate(45deg)
		&:after
			content ''
			position absolute
			top 30px
			right 10px
			display block
			width 25px
			height 4px
			background-color black
			transform rotate(-45deg)

		&_disabled
			opacity .5

.a-card
	padding 0 15px
	display block
	
	&:hover 
		& ^[0]__wrapper
			border-bottom 5px solid green

		& ^[0]__img
			transform scale(1.1)
			
		& ^[0]__link
			color green
			
		& ^[0]__link_more
			color green
			
		& ^[0]__title-wrapper:before
			background-color green
		
	&__wrapper
		padding-bottom 10px
		height 100%
		background-color lightgrey
		border-bottom 5px solid transparent
		transition .7s
		
	&__img-wrapper
		position relative
		overflow hidden
		
	&__link
		padding-bottom 4px
		font-size 1.4em
		line-height 1
		text-decoration none
		color #fff
		transition .7s
		
		&_more
			font-size 1.2em
			color grey

	&__img
		display block
		width 100%
		height auto
		transition transform .7s
		
	&__cont-wrapper
		padding 15px
		
	&__title-wrapper
		position relative
		&:before
			content ''
			position absolute
			top 0
			left -15px
			size(5px, 100%)
			background-color main(1)
			transition .7s

	&__date	
		display block
		color grey
		span
			vertical-align middle
			

	&__preview
		padding 10px 0
		color grey
		
	&__icon
		margin-right 4px
		// size(20px)
		fill grey
		vertical-align middle
		
