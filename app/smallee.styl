*
	box-sizing border-box

.smallee
	padding 40px 0
	display block
		
	&-slider
		position relative
		margin 0 auto
		// padding 0 15px
		// +media('min', 768)
		// 	width 750px
		// +media('min', 992)
		// 	width 970px
		// +media('min', 1200)
		// 	width 1170px
		
	&-next,
	&-prev
		position absolute
		z-index 1
		top 30%
		padding 10px
		display inline-block
		width 50px
		height 50px 
		background-color #fff
		border-radius 50%
		box-shadow bs-down
		transition time-s
		
		// +media('max', 539)
		// 	size(40px)
		
	&-prev
		left 30px
			
	&-next
		right 30px
			
	&_disabled
		visibility hidden
		opacity 0
		
	&-icon-arrow
		// size(30px)
		fill green
		// +media('max', 539)
		// 	size(20px)
		
		&_left
			transform rotate(180deg)
			
.a-card
	padding 0 15px
	display block
	
	// +media('min', 768)
	// 	width 33.3333%
	// +media('mult', 767, 540)
	// 	width 50%
	// +media('max', 539)
	// 	width 100%
		
	&:hover 
		& ^[0]__wrapper
			border-bottom 5px solid green

		& ^[0]__img
			transform scale(1.1)
			
		& ^[0]__link
			color green
			
		& ^[0]__link_more
			color green
			
		& ^[0]__title-wrapper:before
			background-color green
		
	&__wrapper
		padding-bottom 10px
		height 100%
		background-color lightgrey
		border-bottom 5px solid transparent
		transition .7s
		
	&__img-wrapper
		position relative
		overflow hidden
		
	&__link
		padding-bottom 4px
		font-size 1.4em
		line-height 1
		text-decoration none
		color #fff
		transition .7s
		
		&_more
			font-size 1.2em
			color grey

	&__img
		display block
		width 100%
		height auto
		transition transform .7s
		
	&__cont-wrapper
		padding 15px
		
	&__title-wrapper
		position relative
		&:before
			content ''
			position absolute
			top 0
			left -15px
			size(5px, 100%)
			background-color main(1)
			transition .7s
	
	&__date	
		display block
		color grey
		span
			vertical-align middle
			

	&__preview
		padding 10px 0
		color grey
		
	&__icon
		margin-right 4px
		// size(20px)
		fill grey
		vertical-align middle
		
